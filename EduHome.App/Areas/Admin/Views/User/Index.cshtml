@model IEnumerable<AppUser>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name:</th>
                <th scope="col">UserName:</th>
                <th scope="col">Email:</th>
                <th scope="col">Email Confirm:</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <th>@item.Name</th>
                        <th>@item.UserName</th>
                        <th>@item.Email</th>
                    <th>@item.EmailConfirmed</th>
                        <td><a onclick="if(!confirm('Are you sure?')){return false;}"
                           asp-controller="user" asp-action="remove" asp-route-id="@item.Id"
                            class=" delete-item" ><i class="fas fa-trash text text-danger"></i></a></td>
                    </tr>
            }
        </tbody>
    </table>
    <div>
    </div>
</div>